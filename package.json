{
    "name": "portable-postgis-app",
    "version": "2.0.5",
    "description": "Portable App bundling PostgreSQL and PostGIS with a built-in database browser",
    "keywords": [
        "portable",
        "postgresql",
        "postgis",
        "database",
        "gis",
        "spatial",
        "electron",
        "offline",
        "developer-tools",
        "sql",
        "postgres"
    ],
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "concurrently -k -n ng,electron -c blue,green \"npm run dev:renderer\" \"npm run dev:electron\"",
        "dev:renderer": "cd renderer && npx ng serve",
        "dev:electron": "wait-on http://localhost:4200 -t 60000 && cross-env ELECTRON_LOAD_ANGULAR_DEV=1 electron .",
        "setup": "node scripts/setup-resources.js",
        "build:renderer": "cd renderer && npm run build",
        "build": "npm run build:renderer && electron-builder",
        "build:win": "node scripts/setup-resources.js --target=win && npm run build:renderer && electron-builder --win",
        "build:mac": "node scripts/setup-resources.js --target=mac && npm run build:renderer && electron-builder --mac",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "build": {
        "appId": "com.example.portable-postgis",
        "productName": "Portable PostGIS",
        "icon": "assets/icon.png",
        "publish": null,
        "files": [
            "main.js",
            "package.json",
            "dist/**/*",
            "src/preload.js",
            "src-main/**/*",
            "assets/**/*",
            "!src/index.html",
            "!src/renderer.js",
            "!src/styles.css",
            "!src/assets/**"
        ],
        "extraResources": [
            {
                "from": "bin/${os}",
                "to": "bin/${os}",
                "filter": [
                    "**/*",
                    "!**/__pycache__/**",
                    "!**/tests/**",
                    "!**/test/**",
                    "!**/*.pyc",
                    "!**/*.pyo",
                    "!**/doc/**",
                    "!**/share/doc/**",
                    "!**/share/man/**",
                    "!**/symbols/**",
                    "!**/*.pdb",
                    "!**/StackBuilder/**",
                    "!**/include/**",
                    "!**/share/locale/**",
                    "!**/postgis-bundle-*/**",
                    "!**/pgAdmin 4/**",
                    "!**/libs/**",
                    "!**/python/**"
                ]
            },
            "data"
        ],
        "mac": {
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "portable",
                "zip"
            ],
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true
        },
        "portable": {
            "artifactName": "${productName}-Portable-${version}.${ext}",
            "requestExecutionLevel": "user"
        }
    },
    "author": "infinity2zero",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/infinity2zero/portable-postgis-app.git"
    },
    "dependencies": {
        "fs-extra": "^11.2.0",
        "pg": "^8.11.3",
        "pg-copy-streams": "^6.0.0"
    },
    "devDependencies": {
        "adm-zip": "^0.5.10",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-reload": "^2.0.0-alpha.1",
        "node-fetch": "^2.6.7",
        "tar": "^6.2.0",
        "wait-on": "^7.2.0"
    }
}